{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowImportingTsExtensions": false,
    "baseUrl": "${configDir}",
    "isolatedDeclarations": false,
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "rootDir": "${configDir}",
    "skipLibCheck": true,
    "tsBuildInfoFile": ".cache/tsconfig.solution.tsbuildinfo",
    "types": ["node"]
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/.cache",
    "**/build",
    "**/coverage"
  ],
  "extends": "./tooling/typescript/src/base.json",
  "include": [
    "**/*.config.ts",
    "**/*.config.mts",
    "**/*.config.cts",
    "**/vitest.config.ts",
    "**/vite.config.ts",
    "**/eslint.config.ts",
    "**/prettier.config.ts",
    "**/rollup.config.ts",
    "**/webpack.config.ts"
  ]
}
