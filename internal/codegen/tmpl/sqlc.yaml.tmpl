version: '2'
sql:
  - engine: 'postgresql'
    queries: './generated/infrastructure/persistence/postgres/queries'
    schema: './generated/infrastructure/persistence/postgres/migrations'
    gen:
      go:
        query_parameter_limit: 0
        package: 'repositories'
        emit_pointers_for_null_types: true
        out: './generated/infrastructure/persistence/postgres/repositories'
        sql_package: 'pgx/v5'
        initialisms:
          [
            'id',
            'ip',
            'url',
            'uuid',
            'api',
            'http',
            'json',
            'oauth',
            'jwt',
            'cpu',
            'mb',
          ]
        overrides:
          - db_type: 'uuid'
            go_type: 'github.com/google/uuid.UUID'
          - db_type: 'uuid'
            go_type: '*github.com/google/uuid.UUID'
            nullable: true
          - db_type: 'timestamptz'
            go_type: 'time.Time'
          - db_type: 'timestamptz'
            nullable: true
            go_type:
              type: '*time.Time'
