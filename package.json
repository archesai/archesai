{
  "name": "@archesai/archesai",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "clean": "pnpm clean:dist && pnpm clean:node_modules",
    "clean:dist": "pnpm -r exec sh -c 'rm -rf .cache .turbo .tanstack dist .nitro .out'",
    "clean:node_modules": "pnpm -r exec sh -c 'rm -rf node_modules'",
    "db:generate": "DATABASE_URL=postgresql://admin:admin@localhost:5432/archesai-db?schema=public pnpm --filter @archesai/database db:generate",
    "db:migreate": "DATABASE_URL=postgresql://admin:admin@localhost:5432/archesai-db?schema=public pnpm --filter @archesai/database db:migreate",
    "db:push": "DATABASE_URL=postgresql://admin:admin@localhost:5432/archesai-db?schema=public pnpm --filter @archesai/database db:push",
    "db:reset": "DATABASE_URL=postgresql://admin:admin@localhost:5432/archesai-db?schema=public pnpm --filter @archesai/database db:reset",
    "db:seed": "DATABASE_URL=postgresql://admin:admin@localhost:5432/archesai-db?schema=public pnpm --filter @archesai/database db:seed",
    "db:studio": "DATABASE_URL=postgresql://admin:admin@localhost:5432/archesai-db?schema=public pnpm --filter @archesai/database db:studio",
    "dev": "turbo watch dev --continue",
    "dev:api": "turbo watch dev -F @archesai/api",
    "dev:platform": "turbo watch dev -F @archesai/platform",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "generate": "pnpm --filter @archesai/client generate",
    "preinstall": "only-allow pnpm",
    "postinstall": "sherif",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "prepare": "husky",
    "typecheck": "turbo run typecheck"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,md,yaml}": [
      "pnpm prettier --write --ignore-path .gitignore --log-level warn"
    ]
  },
  "prettier": "@archesai/prettier/base",
  "devDependencies": {
    "@archesai/eslint": "workspace:*",
    "@archesai/prettier": "workspace:*",
    "@archesai/typescript": "workspace:*",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "only-allow": "^1.2.1",
    "prettier": "catalog:prettier",
    "sherif": "^1.6.1",
    "turbo": "^2.5.4",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=24.4.0",
    "pnpm": "^10.13.1"
  }
}
