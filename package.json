{
  "name": "@archesai/archesai",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nx run-many -t build -t tsc:build --all",
    "clean": "pnpm clean:dist && pnpm clean:node_modules",
    "clean:dist": "pnpm -r exec sh -c 'rm -rf .cache .turbo .tanstack dist .nitro .output .nx'",
    "clean:node_modules": "pnpm -r exec sh -c 'rm -rf node_modules'",
    "client:generate": "pnpm --filter @archesai/client client:generate",
    "database:clean": "DATABASE_URL=postgresql://admin:password@localhost:5432/archesai-db?schema=public pnpm --filter @archesai/database database:clean",
    "database:generate": "DATABASE_URL=postgresql://admin:password@localhost:5432/archesai-db?schema=public pnpm --filter @archesai/database database:generate",
    "database:migrate": "DATABASE_URL=postgresql://admin:password@localhost:5432/archesai-db?schema=public pnpm --filter @archesai/database database:migrate",
    "database:push": "DATABASE_URL=postgresql://admin:password@localhost:5432/archesai-db?schema=public pnpm --filter @archesai/database database:push",
    "database:reset": "DATABASE_URL=postgresql://admin:password@localhost:5432/archesai-db?schema=public pnpm --filter @archesai/database database:reset",
    "database:seed": "DATABASE_URL=postgresql://admin:password@localhost:5432/archesai-db?schema=public pnpm --filter @archesai/database database:seed",
    "database:studio": "DATABASE_URL=postgresql://admin:password@localhost:5432/archesai-db?schema=public pnpm --filter @archesai/database database:studio",
    "dev": "turbo watch dev --continue",
    "dev:api": "turbo watch dev -F @archesai/api",
    "dev:platform": "turbo watch dev -F @archesai/platform",
    "format": "nx format:check --all",
    "format:fix": "nx format:write --all",
    "preinstall": "only-allow pnpm",
    "postinstall": "sherif",
    "lint": "nx run-many -t lint --all",
    "lint:fix": "nx run-many -t lint --all --fix",
    "prepare": "husky",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "nx run-many -t typecheck --all"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,md,yaml}": [
      "pnpm prettier --write --ignore-path .gitignore --ignore-path .prettierignore --log-level warn"
    ]
  },
  "prettier": "@archesai/prettier",
  "devDependencies": {
    "@archesai/eslint": "workspace:*",
    "@archesai/prettier": "workspace:*",
    "@archesai/typescript": "workspace:*",
    "@better-auth/cli": "catalog:",
    "@commitlint/cli": "catalog:root",
    "@commitlint/config-conventional": "catalog:root",
    "@fontsource/geist": "catalog:ui",
    "@fontsource/geist-mono": "catalog:ui",
    "@ibm-cloud/openapi-ruleset": "catalog:client",
    "@nx/eslint": "catalog:nx",
    "@nx/eslint-plugin": "catalog:nx",
    "@nx/js": "catalog:nx",
    "@nx/vite": "catalog:nx",
    "@playwright/test": "catalog:test",
    "@tailwindcss/vite": "catalog:vite",
    "@tanstack/react-router": "catalog:tanstack",
    "@tanstack/table-core": "catalog:tanstack",
    "@types/fluent-ffmpeg": "catalog:intelligence",
    "@types/node": "catalog:",
    "@types/nodemailer": "catalog:",
    "@types/pg": "catalog:database",
    "@types/qs": "catalog:",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "@types/supertest": "catalog:test",
    "@vitejs/plugin-react": "catalog:vite",
    "@vitest/ui": "catalog:test",
    "babel-plugin-react-compiler": "catalog:vite",
    "drizzle-kit": "catalog:database",
    "drizzle-seed": "catalog:database",
    "eslint": "catalog:eslint",
    "fastify": "catalog:fastify",
    "fastify-type-provider-zod": "catalog:fastify",
    "husky": "catalog:root",
    "lint-staged": "catalog:root",
    "nx": "catalog:nx",
    "only-allow": "catalog:root",
    "orval": "catalog:client",
    "prettier": "catalog:prettier",
    "rollup-plugin-visualizer": "catalog:vite",
    "sherif": "catalog:root",
    "supertest": "catalog:test",
    "tailwindcss": "catalog:ui",
    "tw-animate-css": "catalog:ui",
    "typescript": "catalog:",
    "vite": "7.0.6",
    "vitest": "catalog:test",
    "zod": "catalog:"
  },
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=24.5.0",
    "pnpm": "^10.14.0"
  }
}
