{
  "eslint.workingDirectories": [
    { "pattern": "apps/*/" },
    { "pattern": "packages/*/" },
    { "pattern": "tooling/*/" },
    { "pattern": "e2e/*/" }
  ],
  "files.exclude": {
    "**/.cache": true,
    "**/.coverage": true,
    "**/.nitro": true,
    "**/.output": true,
    "**/.tanstack": true,
    "**/.turbo": true,
    "**/dist": true,
    "**/node_modules": true
  },
  "tailwindCSS.experimental.configFile": {
    "./apps/platform/src/styles/globals.css": "./apps/platform/src/**",
    "./packages/ui/src/styles/globals.css": "./packages/ui/src/**"
  }
}
