{
  "eslint.workingDirectories": [
    { "pattern": "apps/*/" },
    { "pattern": "packages/*/" },
    { "pattern": "tooling/*/" },
    { "pattern": "e2e/*/" }
  ],
  "files.exclude": {
    "**/*.tsbuildinfo": false,
    "**/.cache": false,
    "**/.next": false,
    "**/.nitro": false,
    "**/.output": false,
    "**/.tanstack": false,
    "**/.turbo": false,
    "**/dist": false,
    "**/next-env.d.ts": false,
    "**/node_modules": false
  },
  "tailwindCSS.experimental.configFile": {
    "./apps/landing/src/styles/globals.css": "./apps/landing/src/**",
    "./apps/platform/src/styles/globals.css": "./apps/platform/src/**",
    "./packages/ui/src/styles/globals.css": "./packages/ui/src/**"
  },
  "typescript.tsdk": "node_modules/typescript/lib"
}
