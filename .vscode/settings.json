{
  "eslint.workingDirectories": ["./ui", "./api"],
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.next": true,
    "**/.swc": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/tmp": true,
    "build.json": true
  },
  "jest.jestCommandLine": "npm run test --",
  "jest.rootPath": "./api",
  "jest.runMode": {
    "runAllTestsOnStartup": false,
    "type": "on-demand"
  },
  "yaml.schemas": {
    "https://raw.githubusercontent.com/k3d-io/k3d/refs/heads/main/pkg/config/v1alpha5/schema.json": [
      "k3d-config.yaml"
    ]
  }
}
