{
  "eslint.workingDirectories": [
    {
      "pattern": "packages/*/"
    },
    {
      "pattern": "apps/*/"
    },
    {
      "pattern": "e2e/*/"
    },
    {
      "pattern": "tooling/*/"
    }
  ],
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "files.exclude": {
    "**/*.tsbuildinfo": true,
    "**/.cache": true,
    "**/.next": true,
    "**/.turbo": true,
    "**/dist": true,
    "**/next-env.d.ts": true,
    "**/node_modules": true
  },
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ]
  // "tailwindCSS.experimental.configFile": "./tooling/tailwind/src/web.ts"
  // "typescript.preferences.autoImportFileExcludePatterns": [
  //   "next/router.d.ts",
  //   "next/dist/client/router.d.ts"
  // ]
}
