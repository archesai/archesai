{
  "permissions": {
    "allow": [
      "Bash(make generate:*)",
      "Bash(make format:*)",
      "Bash(grep:*)",
      "Bash(sed:*)",
      "Bash(make lint:*)"
    ],
    "deny": [],
    "ask": []
  },
  "outputStyle": "default",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "make lint"
          }
        ]
      }
    ]
  }
}
