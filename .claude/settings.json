{
  "permissions": {
    "allow": [
      "Bash(make generate:*)",
      "Bash(make format:*)",
      "Bash(grep:*)",
      "Bash(sed:*)",
      "Bash(make lint:*)",
      "Bash(make lint-go:*)",
      "Bash(go run:*)",
      "Bash(go build:*)",
      "Bash(find:*)",
      "Bash(go test:*)",
      "Bash(gofmt:*)",
      "Bash(golangci-lint run:*)",
      "Bash(go doc:*)",
      "Bash(make migrate:*)",
      "Bash(make clean-generated:*)",
      "Bash(make test-short:*)"
    ],
    "deny": [],
    "ask": []
  },
  "outputStyle": "default",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "make lint-go"
          }
        ]
      }
    ]
  }
}
