{
  "name": "@archesai/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "imports": {
    "#app/*": "./src/app/*.ts",
    "#utils/*": "./src/utils/*.ts"
  },
  "scripts": {
    "build": "tsc --build",
    "clean": "git clean -xdf node_modules .cache .turbo .tanstack dist .nitro .out",
    "dev": "ARCHES_CONFIG_ROOT=$PWD/../../deploy/kubernetes/base node --watch src/main.ts",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "start": "ARCHES_CONFIG_ROOT=$PWD/../../deploy/kubernetes/base node dist/main.js",
    "typecheck": "tsc --build --emitDeclarationOnly"
  },
  "prettier": "@archesai/prettier/base",
  "dependencies": {
    "@archesai/auth": "workspace:*",
    "@archesai/billing": "workspace:*",
    "@archesai/core": "workspace:*",
    "@archesai/database": "workspace:*",
    "@archesai/intelligence": "workspace:*",
    "@archesai/orchestration": "workspace:*",
    "@archesai/storage": "workspace:*",
    "@nestjs/common": "catalog:",
    "@nestjs/core": "catalog:",
    "@nestjs/platform-fastify": "catalog:",
    "reflect-metadata": "catalog:",
    "rxjs": "catalog:",
    "tslib": "catalog:"
  },
  "devDependencies": {
    "@archesai/typescript": "workspace:*",
    "@swc-node/core": "^1.13.3",
    "@swc-node/register": "^1.10.10",
    "@swc/core": "^1.12.9",
    "@swc/types": "^0.1.23",
    "@types/node": "catalog:",
    "typescript": "catalog:"
  }
}
