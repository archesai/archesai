{
  "name": "@archesai/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "imports": {
    "#app/*": "./dist/app/*.js",
    "#utils/*": "./dist/utils/*.js"
  },
  "scripts": {
    "build": "tsc --build",
    "clean": "git clean -xdf node_modules .cache .turbo .next dist",
    "dev:build": "tsc --build --watch",
    "dev:serve": "ARCHES_CONFIG_ROOT=$PWD/../../deploy/kubernetes/base node --watch src/main.ts",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "start": "ARCHES_CONFIG_ROOT=$PWD/../../deploy/kubernetes/base node dist/main.js",
    "typecheck": "tsc --project tsconfig.lib.json --emitDeclarationOnly"
  },
  "prettier": "@archesai/prettier/base",
  "dependencies": {
    "@archesai/auth": "workspace:*",
    "@archesai/billing": "workspace:*",
    "@archesai/core": "workspace:*",
    "@archesai/database": "workspace:*",
    "@archesai/intelligence": "workspace:*",
    "@archesai/orchestration": "workspace:*",
    "@archesai/storage": "workspace:*",
    "@fastify/helmet": "catalog:",
    "@nestjs/common": "catalog:",
    "@nestjs/core": "catalog:",
    "@nestjs/platform-fastify": "catalog:",
    "reflect-metadata": "catalog:",
    "rxjs": "catalog:",
    "tslib": "catalog:"
  },
  "devDependencies": {
    "@archesai/typescript": "workspace:*",
    "@types/node": "catalog:",
    "typescript": "catalog:"
  }
}
