{
  "name": "@archesai/database",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "imports": {
    "#*": "./src/*.ts"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": "./src/index.ts"
  },
  "scripts": {
    "build": "tsc --build",
    "clean": "git clean -xdf node_modules .cache .turbo .tanstack dist",
    "db:generate": "drizzle-kit generate",
    "db:inspect": "drizzle-kit inspect",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:reset": "node ./src/helpers/reset.ts",
    "db:seed": "node ./src/helpers/seed.ts",
    "db:studio": "drizzle-kit studio",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --build --emitDeclarationOnly"
  },
  "prettier": "@archesai/prettier/base",
  "dependencies": {
    "@archesai/core": "workspace:*",
    "@archesai/domain": "workspace:*",
    "@libsql/client": "catalog:",
    "drizzle-orm": "catalog:",
    "pg": "catalog:",
    "tslib": "catalog:"
  },
  "devDependencies": {
    "@archesai/typescript": "workspace:*",
    "@types/node": "catalog:",
    "@types/pg": "catalog:",
    "drizzle-kit": "catalog:",
    "drizzle-seed": "catalog:",
    "typescript": "catalog:"
  }
}
