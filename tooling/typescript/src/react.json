{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler"
  },
  "exclude": [
    "${configDir}/src/**/*.spec.ts",
    "${configDir}/src/**/*.spec.tsx"
  ],
  "include": ["${configDir}/src"]
}
