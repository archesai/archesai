{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "declarationDir": "${configDir}/.cache/dist/spec",
    "emitDeclarationOnly": true,
    "isolatedDeclarations": false,
    "outDir": "${configDir}/.cache/dist/spec",
    "rootDir": "${configDir}",
    "tsBuildInfoFile": "${configDir}/.cache/dist/spec/tsconfig.spec.tsbuildinfo",
    "types": ["node", "vitest/globals"]
  },
  "include": [
    "${configDir}/src/**/*.spec.ts",
    "${configDir}/src/**/*.spec.tsx",
    "${configDir}/**/vite.config.ts",
    "${configDir}/**/vitest.config.ts",
    "${configDir}/**/playwright.config.ts",
    "${configDir}/**/orval.config.ts",
    "${configDir}/**/drizzle.config.ts",
    "${configDir}/**/eslint.config.ts"
  ]
}
